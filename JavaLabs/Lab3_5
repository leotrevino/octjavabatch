
import java.util.*;

public class JavaLab3_5 {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Please enter your string: "); //enter "Helloworld"
        String S = in.next();
        System.out.println("Please enter your first number: "); //enter 3
        int start = in.nextInt();
        System.out.println("Please enter your second number: "); //enter 7
        int end = in.nextInt();
        
        System.out.println(S.substring(start,end)); //result is "lowo"
    }
}
